{
  "name": "rinter",
  "version": "2.0.0-1",
  "description": "Minimalist state container based on reactive extensions",
  "main": "lib/index.js",
  "module": "lib-esm/index.js",
  "repository": "https://github.com/rinterjs/rinter.git",
  "author": "Diego Fernandez <diegof79@gmail.com>",
  "license": "MIT",
  "sideEffects": false,
  "keywords": [
    "state",
    "predictable",
    "reducer",
    "rxjs",
    "flux",
    "elm"
  ],
  "peerDependencies": {
    "lodash": ">=2.4.0",
    "rxjs": "6.x"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.2",
    "@babel/preset-env": "^7.1.0",
    "@babel/register": "^7.0.0",
    "ava": "^1.0.0-beta.8",
    "cpy-cli": "^2.0.0",
    "eslint": "^5.6.1",
    "lodash": "^4.17.11",
    "npm-run-all": "^4.1.3",
    "nyc": "^13.0.1",
    "rimraf": "^2.6.2",
    "rxjs": "^6.3.3"
  },
  "scripts": {
    "build": "npm-run-all build:node build:esm",
    "build:node": "babel src -d lib",
    "build:esm": "cpy '**/*.js' '!**/*.test.js' --cwd=src ../lib-esm",
    "test": "ava",
    "coverage": "npm-run-all build:node coverage:run",
    "coverage:run": "nyc --reporter=html ava",
    "clean": "rimraf lib lib-esm *.tgz coverage .nyc_output *.log",
    "lint": "eslint src"
  },
  "ava": {
    "files": [
      "src/**/*.test.js"
    ],
    "require": [
      "@babel/register"
    ],
    "babel": {
      "testOptions": {
        "babelrc": false
      }
    }
  }
}
